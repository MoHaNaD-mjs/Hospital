
@page "{id:Guid?}"
@model Web.Areas.Admin.Pages.Doctors.EditModel
@using Core.Dtos.hospital;

@{
    var headerInfo = new ContentHeaderLevels() { level1 = "doctors", level2 = "edit" };
}
@section Styles{
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">

}
<partial name="_ContentHeaderSub" model="headerInfo " />
<section class="content">
    <div class="container-fluid">
        <div class="row text-capitalize">

            <div class="col-12 col-md-8   mx-md-auto">
                <form enctype="multipart/form-data"
                      method="post"
                      id="create"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-begin="begin"
                      data-ajax-success="successEdit"
                      data-ajax-failure="failure"
                      data-ajax-complete="complete"
                      name="create">
                    <input type="hidden" asp-for="@Model.DoctorPost.Id" />
                    <input type="hidden" asp-for="@Model.DoctorPost.PhotoPath" />
                    <div class="card card-primary card-outline card-outline-tabs">
                        <div id="overlay" class="overlay-wrapper  d-none ">
                            <div class="overlay">
                                <i class="fas fa-3x fa-sync-alt fa-spin"></i>
                            </div>
                        </div>
                        <div class="card-header p-0 border-bottom-0">
                            <ul class="nav nav-tabs text-center" id="custom-tabs-four-tab" role="tablist">

                                <li class="nav-item flex-grow-1 flex-shrink-1">
                                    <a class="nav-link active" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="true">@Localizer["english"]</a>
                                </li>
                                <li class="nav-item flex-grow-1 flex-shrink-1">
                                    <a class="nav-link" id="custom-tabs-four-messages-tab" data-toggle="pill" href="#custom-tabs-four-messages" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">@Localizer["arabic"]</a>
                                </li>

                                <li class="nav-item flex-grow-1 flex-shrink-1">
                                    <a class="nav-link" id="custom-tabs-four-settings-tab" data-toggle="pill" href="#custom-tabs-four-settings" role="tab" aria-controls="custom-tabs-four-settings" aria-selected="false">@Localizer["upload images"].Value </a>
                                </li>

                            </ul>
                        </div>
                        <div class="card-body">

                            <div class="tab-content" id="custom-tabs-four-tabContent">

                                <div class="tab-pane fade active show " id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                    <div class="form-group">
                                        <label>@Localizer["name"]</label>
                                        <input asp-for="@Model.DoctorPost.Name" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.Name" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>@Localizer["university"]</label>
                                        <input asp-for="@Model.DoctorPost.University" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.University" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>@Localizer["special"]</label>
                                        <input asp-for="@Model.DoctorPost.Special" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.Special" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>@Localizer["degree"]</label>
                                        <input asp-for="@Model.DoctorPost.Degree" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.Degree" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>@Localizer["job Title"]</label>
                                        <input asp-for="@Model.DoctorPost.Job" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.Job" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label class=" ">@Localizer["isConsultant"]</label>


                                        <div class="form-check">

                                            <input asp-for="@Model.DoctorPost.IsConsultant" class="d-block " type="checkbox">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>@Localizer["department"].Value</label>

                                        <select class="form-control w-50" asp-for="@Model.DoctorPost.DepartmentId" asp-items="@Model.departments">
                                        </select>
                                        <span asp-validation-for="@Model.DoctorPost.DepartmentId" class="text-danger"></span>

                                    </div>


                                </div>
                                <div class="tab-pane fade" id="custom-tabs-four-messages" role="tabpanel" aria-labelledby="custom-tabs-four-messages-tab">
                                    <div class="form-group">
                                        <label>@Localizer["name"]</label>
                                        <input asp-for="@Model.DoctorPost.NameAr" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.NameAr" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>@Localizer["university"]</label>
                                        <input asp-for="@Model.DoctorPost.UniversityAr" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.UniversityAr" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>@Localizer["special"]</label>
                                        <input asp-for="@Model.DoctorPost.SpecialAr" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.SpecialAr" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>@Localizer["degree"]</label>
                                        <input asp-for="@Model.DoctorPost.DegreeAr" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.DegreeAr" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>@Localizer["job Title"]</label>
                                        <input asp-for="@Model.DoctorPost.JobAr" type="text" class="form-control">
                                        <span asp-validation-for="@Model.DoctorPost.JobAr" class="text-danger"></span>

                                    </div>

                                </div>


                                <div class="tab-pane fade   " id="custom-tabs-four-settings" role="tabpanel" aria-labelledby="custom-tabs-four-settings-tab">
                                    <div class="d-flex justify-content-center align-items-center mt-1 border text-info">
                                        <input type="file" asp-for="@Model.photosUpload" class="d-none" />
                                        <label for="photosUpload">
                                            <i class="fa fa-cloud-upload-alt"> </i>
                                        </label>
                                    </div>
                                    <div id="galleryUpload">
                                        @if (!String.IsNullOrEmpty(Model.DoctorPost.PhotoPath))
                                        {
                                        <div id="@Model.DoctorPost.Id" class="d-flex flex-column justify-content-center  align-items-center">
                                            <img height="100" width="100" src="@Url.Content("~/" + Model.DoctorPost.PhotoPath)" alt="image-Depatemnet" />
                                            <a method="post"
                                               id="deleteForm"
                                               data-ajax="true"
                                               data-ajax-method="Get"
                                               data-ajax-mode="replace"
                                               data-ajax-update="@Model.DoctorPost.Id"
                                               data-ajax-begin="begin"
                                               data-ajax-success="successDeleteImage"
                                               data-ajax-failure="failure"
                                               data-ajax-complete="complete"
                                               class="text-decoration-none   btn-danger btn "
                                               asp-page="Edit" asp-route-photoId="@Model.DoctorPost.Id" asp-area="Admin" asp-page-handler="DeleteImage">@Localizer["delete"]</a>
                                        </div>
                                        }

                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-footer text-center  ">

                            <div>
                                <button id="Submit" type="submit" class="btn btn-primary  ">@Localizer["submit"]</button>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </form>
            </div>

        </div>

    </div>



</section>
@section Scripts{
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
 
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
    <script>
    $(function () {
        // parameters [ languagePage, continer-Images,Size-Files,Count-Files ]
    $("#photosUpload").UploadImage( "@Model.lang",$("#galleryUpload"),2,8,['jpg','png','jpeg']);
    });
    </script>
}