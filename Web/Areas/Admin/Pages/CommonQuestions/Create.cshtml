@page
@model Web.Areas.Admin.Pages.CommonQuestions.CreateModel
@{
    var headerInfo = new ContentHeaderLevels() { level1 = "CommonQuestions", level2 = "create" };
}
@section Styles{
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">

}
<partial name="_ContentHeaderSub" model="headerInfo " />
<section class="content">
    <div class="container-fluid">
        <div class="row text-capitalize">

            <div class="col-12 col-md-8   mx-md-auto">
                <form method="post"
                      id="create"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-begin="begin"
                      data-ajax-success="success"
                      data-ajax-failure="failure"
                      data-ajax-complete="complete"
                      name="create">
                    <div class="card card-primary card-outline card-outline-tabs">
                        <div id="overlay" class="overlay-wrapper  d-none ">
                            <div class="overlay">
                                <i class="fas fa-3x fa-sync-alt fa-spin"></i>
                            </div>
                        </div>
                        <div class="card-header p-0 border-bottom-0">
                            <ul class="nav nav-tabs text-center" id="custom-tabs-four-tab" role="tablist">

                                <li class="nav-item flex-grow-1 flex-shrink-1">
                                    <a class="nav-link active" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="true">@Localizer["english"]</a>
                                </li>
                                <li class="nav-item flex-grow-1 flex-shrink-1">
                                    <a class="nav-link" id="custom-tabs-four-messages-tab" data-toggle="pill" href="#custom-tabs-four-messages" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">@Localizer["arabic"]</a>
                                </li>

                            </ul>
                        </div>
                        <div class="card-body">

                            <div class="tab-content" id="custom-tabs-four-tabContent">

                                <div class="tab-pane fade active show " id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                    <div class="form-group">
                                        <label>@Localizer["title"].Value</label>
                                        <input asp-for="@Model.commonQuestion.Title" type="text" class="form-control">
                                        <span asp-validation-for="@Model.commonQuestion.Title" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">@Localizer["description"].Value</label>
                                        <textarea rows="5" asp-for="@Model.commonQuestion.description" type="text" class="form-control"></textarea>
                                        <span asp-validation-for="@Model.commonQuestion.description" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="tab-pane fade" id="custom-tabs-four-messages" role="tabpanel" aria-labelledby="custom-tabs-four-messages-tab">
                                    <div class="form-group">
                                        <label class="d-block text-right">@Localizer["title"].Value</label>
                                        <input asp-for="@Model.commonQuestion.TitleAr" type="text" class="form-control">
                                        <span asp-validation-for="@Model.commonQuestion.TitleAr" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label class="d-block text-right" for="exampleInputPassword1">@Localizer["description"].Value</label>
                                        <textarea rows="5" asp-for="@Model.commonQuestion.descriptionAr" type="text" class="form-control"></textarea>
                                        <span asp-validation-for="@Model.commonQuestion.descriptionAr" class="text-danger"></span>

                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-footer text-center  ">

                            <div>
                                <button id="Submit" type="submit" class="btn btn-primary  ">@Localizer["submit"]</button>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </form>
            </div>

        </div>

    </div>



</section>
@section Scripts{
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>

    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")


}