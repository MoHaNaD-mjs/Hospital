@page "{id:Guid}"
@model Web.Areas.Admin.Pages.Users.EditModel
@{
    var headerInfo = new ContentHeaderLevels() { level1 = "users", level2 = "edit" };
     
}
@section Styles{
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    
}
<partial name="_ContentHeaderSub" model="headerInfo " />
<section class="content">
    <div class="container-fluid">
        <div class="row text-capitalize">

            <div class="col-12 col-md-8   mx-md-auto">
                <form method="post"
                      id="create"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-begin="begin"
                      data-ajax-success="successEdit"
                      data-ajax-failure="failure"
                      data-ajax-complete="complete"
                      name="create">
                    <input type="hidden"  asp-for="@Model.userRegister.Id" />
                     <div class="card card-primary card-outline card-outline-tabs">
                        <div id="overlay" class="overlay-wrapper  d-none ">
                            <div class="overlay">
                                <i class="fas fa-3x fa-sync-alt fa-spin"></i>
                            </div>
                        </div>
                        <div class="card-header p-0 border-bottom-0">
                            <ul class="nav nav-tabs text-center" id="custom-tabs-four-tab" role="tablist">

                                <li class="nav-item flex-grow-1 flex-shrink-1">
                                    <a class="nav-link active" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="true">@Localizer["english"]</a>
                                </li>
                                <li class="nav-item flex-grow-1 flex-shrink-1">
                                    <a class="nav-link" id="custom-tabs-four-messages-tab" data-toggle="pill" href="#custom-tabs-four-messages" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">@Localizer["roles"]</a>
                                </li>

                            </ul>
                        </div>
                        <div class="card-body">

                            <div class="tab-content" id="custom-tabs-four-tabContent">

                                <div class="tab-pane fade active show " id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                    <div class="form-row">
                                        <div class="form-group col">
                                            <label>@Localizer["firstname"].Value</label>
                                            <input asp-for="@Model.userRegister.FirstName" type="text" class="form-control">
                                            <span asp-validation-for="@Model.userRegister.FirstName" class="text-danger"></span>

                                        </div>
                                        <div class="form-group col">
                                            <label>@Localizer["middelname"].Value</label>
                                            <input asp-for="@Model.userRegister.MiddelName" type="text" class="form-control">
                                            <span asp-validation-for="@Model.userRegister.MiddelName" class="text-danger"></span>

                                        </div>
                                        <div class="form-group col">
                                            <label>@Localizer["lastname"].Value</label>
                                            <input asp-for="@Model.userRegister.LastName" type="text" class="form-control">
                                            <span asp-validation-for="@Model.userRegister.LastName" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col">
                                            <label>@Localizer["userName"].Value</label>
                                            <input asp-for="@Model.userRegister.UserName" type="text" class="form-control">
                                            <span asp-validation-for="@Model.userRegister.UserName" class="text-danger"></span>

                                        </div>
                                        <div class="form-group col">
                                            <label>@Localizer["phonenumber"].Value</label>
                                            <input asp-for="@Model.userRegister.PhoneNumber" type="number" class="form-control">
                                            <span asp-validation-for="@Model.userRegister.PhoneNumber" class="text-danger"></span>

                                        </div>

                                    </div>
                                    <div class="form-group  ">
                                        <label>@Localizer["email"].Value</label>
                                        <input asp-for="@Model.userRegister.Email" type="email" class="form-control">
                                        <span asp-validation-for="@Model.userRegister.Email" class="text-danger"></span>

                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-5">
                                            <label>@Localizer["password"].Value</label>
                                            <input asp-for="@Model.changePassword.Password" type="password" class="form-control">
                                            <span asp-validation-for="@Model.changePassword.Password" class="text-danger"></span>

                                        </div>
                                        <div class="form-group col-5">
                                            <label>@Localizer["repassword"].Value</label>
                                            <input asp-for="@Model.changePassword.RePassword" type="password" class="form-control">
                                            <span asp-validation-for="@Model.changePassword.RePassword" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade  " id="custom-tabs-four-messages" role="tabpanel" aria-labelledby="custom-tabs-four-messages-tab">

                                    @foreach (var role in Model.roles)
                                    {
                                        <div class="Model.userRegister-check-role d-flex align-content-center">
                                            <input checked="@role.Selected" name="RolesSelect" value="@role.Name" class="mx-2" style="width:20px;height:20px" type="checkbox" id="@role.Name">
                                            <span> @(Model.lang=="en"? @role.Name : @role.NameAr)</span>
                                        </div>

                                    }

                                </div>

                            </div>
                        </div>
                        <div class="card-footer text-center  ">

                            <div>
                                <button id="Submit" type="submit" class="btn btn-primary  ">@Localizer["submit"]</button>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </form>
            </div>

        </div>

    </div>



</section>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")

}