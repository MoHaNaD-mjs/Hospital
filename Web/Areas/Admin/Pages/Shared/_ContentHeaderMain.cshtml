<div class="content-header text-capitalize">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6 name">
                <h1 class="m-0">@Localizer[Model].Value </h1>
            </div><!-- /.col -->
            <div class="col-sm-6 link">
                <ol class="breadcrumb  ">
                    <li class="breadcrumb-item"><a href="#">@Localizer["home"].Value</a></li>
                    <li class="breadcrumb-item active"> @Localizer[Model].Value</li>
                 </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->