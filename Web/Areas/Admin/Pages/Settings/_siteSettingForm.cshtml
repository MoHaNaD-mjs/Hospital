@using Web.Areas.Admin.Pages.Settings
@model ViewModel
<ul class="nav nav-tabs text-center" id="custom-tabs-four-tab" role="tablist">

    <li class="nav-item flex-grow-1 flex-shrink-1">
        <a class="nav-link active" id="custom-tabs-four-siteEn-tab" data-toggle="pill" href="#custom-tabs-four-siteEn" role="tab" aria-controls="custom-tabs-four-siteEn" aria-selected="true">@Localizer["english"]</a>
    </li>
    <li class="nav-item flex-grow-1 flex-shrink-1">
        <a class="nav-link" id="custom-tabs-four-siteAr-tab" data-toggle="pill" href="#custom-tabs-four-siteAr" role="tab" aria-controls="custom-tabs-four-siteAr" aria-selected="false">@Localizer["arabic"]</a>
    </li>



</ul>
<div class="tab-content" id="custom-tabs-four-tabContent">
    <div class="tab-pane fade active show " id="custom-tabs-four-siteEn" role="tabpanel" aria-labelledby="custom-tabs-four-siteEn-tab">
        <div class="row mt-3 ">
            <div class="form-group col">
                <label>@Localizer["siteName"]</label>
                <input asp-for="@Model.settings.SiteName" type="text" class="form-control">
                <span asp-validation-for="@Model.settings.SiteName" class="text-danger"></span>

            </div>
            <div class="form-group col">
                <label>@Localizer["SiteNameadmin"]</label>
                <input asp-for="@Model.settings.AdminSiteName" type="text" class="form-control">
                <span asp-validation-for="@Model.settings.SiteName" class="text-danger"></span>

            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label>@Localizer["job Times"]</label>
                <input asp-for="@Model.settings.JobTimeDetails" type="text" class="form-control">
                <span asp-validation-for="@Model.settings.JobTimeDetails" class="text-danger"></span>

            </div>
            <div class="form-group col">
                <label>@Localizer["email"]</label>
                <input asp-for="@Model.settings.Email" type="email" class="form-control">
                <span asp-validation-for="@Model.settings.Email" class="text-danger"></span>

            </div>
        </div>
        <div class="row ">
            <div class="form-group col">
                <label>@Localizer["phonemain"]</label>
                <input asp-for="@Model.settings.PhoneNumbermain" type="number" class="form-control">
                <span asp-validation-for="@Model.settings.PhoneNumbermain" class="text-danger"></span>

            </div>
            <div class="form-group col">
                <label>@Localizer["phoensecond"]</label>
                <input asp-for="@Model.settings.PhoneNumberSecond" type="number" class="form-control">
                <span asp-validation-for="@Model.settings.PhoneNumberSecond" class="text-danger"></span>

            </div>
            <div class="form-group col">
                <label>@Localizer["phoenthird"]</label>
                <input asp-for="@Model.settings.PhoneNumberThird" type="number" class="form-control">
                <span asp-validation-for="@Model.settings.PhoneNumberThird" class="text-danger"></span>

            </div>

        </div>
            <div class="form-group">
                <label>@Localizer["address"]</label>
                <input asp-for="@Model.settings.Address" type="text" class="form-control">
                <span asp-validation-for="@Model.settings.Address" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>@Localizer["mapPath"]</label>
                <input asp-for="@Model.settings.MapPath" type="url" class="form-control">
                <span asp-validation-for="@Model.settings.MapPath" class="text-danger"></span>

            </div>


            <div class="form-group">
                <label>@Localizer["facebook link"]</label>
                <input asp-for="@Model.settings.FacebookPath" type="url" class="form-control">
                <span asp-validation-for="@Model.settings.FacebookPath" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>@Localizer["Youtube link"]</label>
                <input asp-for="@Model.settings.YoutubePath" type="url" class="form-control">
                <span asp-validation-for="@Model.settings.YoutubePath" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>@Localizer["LinkedIn link"]</label>
                <input asp-for="@Model.settings.LinkedInPath" type="url" class="form-control">
                <span asp-validation-for="@Model.settings.LinkedInPath" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>@Localizer["aboutUsshort"]</label>
                <textarea rows="3" asp-for="@Model.settings.AboutUs" type="text" class="form-control"></textarea>
                <span asp-validation-for="@Model.settings.AboutUs" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="file" class="d-none" id="SiteLogophoto" name="SiteLogophoto" />
                <label class="d-flex flex-column   " for="SiteLogophoto">
                    <span class="mb-2"> @Localizer["siteLogo"]</span>
                    <i class="fa fa-cloud-upload-alt text-primary"></i>
                </label>

            </div>
            <div id="sitelogocontainer" class="d-flex flex-column justify-content-center  align-items-center">

                @if (!String.IsNullOrEmpty(Model.settings.SiteLogoPath))
                {
                    <div id="sitelogo" class="d-flex flex-column justify-content-center  align-items-center">
                        <img height="150" width="150" src="@Url.Content("~/" + Model.settings.SiteLogoPath)" alt="image-Depatemnet" />
                        <a method="post"
                           data-ajax="true"
                           data-ajax-method="Get"
                           data-ajax-mode="replace"
                           data-ajax-begin="begin"
                           data-ajax-success="successDeleteImage"
                           data-ajax-failure="failure"
                           data-ajax-complete="complete"
                           class="text-decoration-none   btn-danger btn btn-sm "
                           asp-page="index" asp-area="Admin" asp-page-handler="DeleteSiteImage">@Localizer["delete"]</a>
                    </div>

                }
            </div>
        </div>
        <div class="tab-pane fade  " id="custom-tabs-four-siteAr" role="tabpanel" aria-labelledby="custom-tabs-four-siteAr-tab">

            <div class="form-group  mt-3 ">
                <label>@Localizer["siteName"]</label>
                <input asp-for="@Model.settings.SiteNameAr" type="text" class="form-control">
                <span asp-validation-for="@Model.settings.SiteNameAr" class="text-danger"></span>

            </div>
            <div class="form-group col">
                <label>@Localizer["SiteNameadmin"]</label>
                <input asp-for="@Model.settings.AdminSiteName" type="text" class="form-control">
                <span asp-validation-for="@Model.settings.SiteName" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label>@Localizer["address"]</label>
                <input asp-for="@Model.settings.AddressAr" type="text" class="form-control">
                <span asp-validation-for="@Model.settings.AddressAr" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>@Localizer["aboutUsshort"]</label>
                <textarea rows="3" asp-for="@Model.settings.AboutUsAr" type="text" class="form-control"></textarea>
                <span asp-validation-for="@Model.settings.AboutUsAr" class="text-danger"></span>

            </div>
        </div>
    </div>