@using Web.Areas.Admin.Pages.Settings
@model ViewModel
<ul class="nav nav-tabs text-center" id="custom-tabs-four-tab" role="tablist">

    <li class="nav-item flex-grow-1 flex-shrink-1">
        <a class="nav-link active" id="custom-tabs-four-aboutusEn-tab" data-toggle="pill" href="#custom-tabs-four-aboutusEn" role="tab" aria-controls="custom-tabs-four-aboutusEn" aria-selected="true">@Localizer["site"]</a>
    </li>
    <li class="nav-item flex-grow-1 flex-shrink-1">
        <a class="nav-link" id="custom-tabs-four-aboutusAr-tab" data-toggle="pill" href="#custom-tabs-four-aboutusAr" role="tab" aria-controls="custom-tabs-four-aboutusAr" aria-selected="false">@Localizer["manager word"]</a>
    </li>



</ul>
<div class="tab-content" id="custom-tabs-four-tabContent">
    <div class="tab-pane fade active show " id="custom-tabs-four-aboutusEn" role="tabpanel" aria-labelledby="custom-tabs-four-aboutusEn-tab">
        <div class="form-group">
            <label>@Localizer["aboutUsDescription"]</label>
            <textarea rows="4" asp-for="@Model.settings.AboutUsDescription" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.AboutUsDescription" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["value"]</label>
            <textarea rows="4" asp-for="@Model.settings.Value" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.Value" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["vision"]</label>
            <textarea rows="4" asp-for="@Model.settings.Vision" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.Vision" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["message"]</label>
            <textarea rows="4" asp-for="@Model.settings.Message" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.Message" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["history"]</label>
            <textarea rows="4" asp-for="@Model.settings.History" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.History" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["videolink"]</label>
            <input asp-for="@Model.settings.VideoPath" type="text" class="form-control">
            <span asp-validation-for="@Model.settings.VideoPath" class="text-danger"></span>

        </div>
    </div>
    <div class="tab-pane fade  " id="custom-tabs-four-aboutusAr" role="tabpanel" aria-labelledby="custom-tabs-four-aboutusAr-tab">
        <div class="form-group">
            <label>@Localizer["aboutUsDescription"]</label>
            <textarea rows="4" asp-for="@Model.settings.AboutUsDescriptionAr" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.AboutUsDescriptionAr" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["value"]</label>
            <textarea rows="4" asp-for="@Model.settings.ValueAr" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.ValueAr" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["vision"]</label>
            <textarea rows="4" asp-for="@Model.settings.VisionAr" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.VisionAr" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["message"]</label>
            <textarea rows="4" asp-for="@Model.settings.MessageAr" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.MessageAr" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["history"]</label>
            <textarea rows="4" asp-for="@Model.settings.HistoryAr" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.HistoryAr" class="text-danger"></span>

        </div>
    </div>

</div>
