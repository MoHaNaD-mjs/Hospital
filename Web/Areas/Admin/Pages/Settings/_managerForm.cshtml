@using Web.Areas.Admin.Pages.Settings
@model ViewModel
<ul class="nav nav-tabs text-center" id="custom-tabs-four-tab" role="tablist">

    <li class="nav-item flex-grow-1 flex-shrink-1">
        <a class="nav-link active" id="custom-tabs-four-wordEn-tab" data-toggle="pill" href="#custom-tabs-four-wordEn" role="tab" aria-controls="custom-tabs-four-wordEn" aria-selected="true">@Localizer["english"]</a>
    </li>
    <li class="nav-item flex-grow-1 flex-shrink-1">
        <a class="nav-link" id="custom-tabs-four-wordAr-tab" data-toggle="pill" href="#custom-tabs-four-wordAr" role="tab" aria-controls="custom-tabs-four-wordAr" aria-selected="false">@Localizer["arabic"]</a>
    </li>



</ul>
<div class="tab-content" id="custom-tabs-four-tabContent">
    <div class="tab-pane fade active show " id="custom-tabs-four-wordEn" role="tabpanel" aria-labelledby="custom-tabs-four-wordEn-tab">
        <div class="form-group">
            <label>@Localizer["manegerName"]</label>
            <input asp-for="@Model.settings.ManegerName" type="text" class="form-control">
            <span asp-validation-for="@Model.settings.ManegerName" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["manegerTitle"]</label>
            <input asp-for="@Model.settings.ManegerHead" type="text" class="form-control">
            <span asp-validation-for="@Model.settings.ManegerHead" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>@Localizer["manegerWord"]</label>
            <textarea rows="4" asp-for="@Model.settings.ManegerWord" type="text" class="form-control"></textarea>
            <span asp-validation-for="@Model.settings.ManegerWord" class="text-danger"></span>

        </div>
        <div class="form-group">
            <input type="file" class="d-none" id="ManagerPhoto" name="ManagerPhoto" />
            <label class="d-flex flex-column   " for="ManagerPhoto">
                <span class="mb-2"> @Localizer["manager photo"]</span>
                <i class="fa fa-cloud-upload-alt text-primary"></i>
            </label>

        </div>
        <div id="managerPhotocontainer" class="d-flex  justify-content-center  align-items-center">

            @if (!String.IsNullOrEmpty(Model.settings.ManegerPhotoPath))
            {
                <div id="managerPhoto" class="d-flex flex-column justify-content-center  align-items-center">
                    <img height="150" width="150" src="@Url.Content("~/" + Model.settings.ManegerPhotoPath)" alt="image-Depatemnet" />
                    <a method="post"
                       data-ajax="true"
                       data-ajax-method="Get"
                       data-ajax-mode="replace"
                       data-ajax-begin="begin"
                       data-ajax-success="successDeleteImage"
                       data-ajax-failure="failure"
                       data-ajax-complete="complete"
                       class="text-decoration-none   btn-danger btn btn-sm"
                       asp-page="index" asp-area="Admin" asp-page-handler="DeleteManagerImage">@Localizer["delete"]</a>
                </div>

            }
        </div>
        </div>
            <div class="tab-pane fade  " id="custom-tabs-four-wordAr" role="tabpanel" aria-labelledby="custom-tabs-four-wordAr-tab">
                <div class="form-group">
                    <label>@Localizer["manegerName"]</label>
                    <input asp-for="@Model.settings.ManegerNameAr" type="text" class="form-control">
                    <span asp-validation-for="@Model.settings.ManegerNameAr" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label>@Localizer["manegerTitle"]</label>
                    <input asp-for="@Model.settings.ManegerHeadAr" type="text" class="form-control">
                    <span asp-validation-for="@Model.settings.ManegerHeadAr" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label>@Localizer["manegerWord"]</label>
                    <textarea rows="4" asp-for="@Model.settings.ManegerWordAr" type="text" class="form-control"></textarea>
                    <span asp-validation-for="@Model.settings.ManegerWordAr" class="text-danger"></span>

                </div>

            </div>
        </div>
